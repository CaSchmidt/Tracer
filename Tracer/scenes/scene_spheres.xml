<Tracer>
  <Options>
    <Width>1000</Width>
    <Height>1000</Height>
    <FoV>60</FoV>
    <WorldToScreen>2</WorldToScreen>
    <BackgroundColor>
      <r>0</r>
      <g>0.8</g>
      <b>1</b>
    </BackgroundColor>
    <Eye>
      <x>0</x>
      <y>-8</y>
      <z>2</z>
    </Eye>
    <LookAt>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </LookAt>
    <CameraUp>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </CameraUp>
  </Options>
  <Scene>
    <!-- ground plane -->
    <Object type="Plane">
      <Width>20</Width>
      <Height>20</Height>
      <Material type="Opaque">
        <Diffuse type="Checked">
          <ColorA>
            <r>1</r>
            <g>0</g>
            <b>0</b>
          </ColorA>
          <ColorB>
            <r>0.8</r>
            <g>0</g>
            <b>0</b>
          </ColorB>
          <ScaleS>10</ScaleS>
          <ScaleT>10</ScaleT>
        </Diffuse>
      </Material>
      <Transform/>
    </Object>
    <!-- red sphere -->
    <Object type="Sphere">
      <Material type="Opaque">
        <Diffuse type="Checked">
          <ColorA>
            <r>1</r>
            <g>0</g>
            <b>0</b>
          </ColorA>
          <ColorB>
            <r>0.8</r>
            <g>0</g>
            <b>0</b>
          </ColorB>
          <ScaleS>4</ScaleS>
          <ScaleT>2</ScaleT>
        </Diffuse>
      </Material>
      <Radius>1</Radius>
      <Transform>
        <Translate>
          <x>-2</x>
          <y>2</y>
          <z>1</z>
        </Translate>
      </Transform>
    </Object>
    <!-- green sphere -->
    <Object type="Sphere">
      <Material type="Opaque">
        <Diffuse type="Checked">
          <ColorA>
            <r>0</r>
            <g>1</g>
            <b>0</b>
          </ColorA>
          <ColorB>
            <r>0</r>
            <g>0.8</g>
            <b>0</b>
          </ColorB>
          <ScaleS>4</ScaleS>
          <ScaleT>2</ScaleT>
        </Diffuse>
      </Material>
      <Radius>1</Radius>
      <Transform>
        <Translate>
          <x>0</x>
          <y>0</y>
          <z>1</z>
        </Translate>
      </Transform>
    </Object>
    <!-- blue sphere -->
    <Object type="Sphere">
      <Material type="Opaque">
        <Diffuse type="Checked">
          <ColorA>
            <r>0</r>
            <g>0</g>
            <b>1</b>
          </ColorA>
          <ColorB>
            <r>0</r>
            <g>0</g>
            <b>0.8</b>
          </ColorB>
          <ScaleS>4</ScaleS>
          <ScaleT>2</ScaleT>
        </Diffuse>
      </Material>
      <Radius>1</Radius>
      <Transform>
        <Translate>
          <x>2</x>
          <y>-2</y>
          <z>1</z>
        </Translate>
      </Transform>
    </Object>
    <!-- SPACE -->
    <Light type="Directional">
      <Irradiance>
        <r>3</r>
        <g>3</g>
        <b>3</b>
      </Irradiance>
      <Direction>
        <x>1</x>
        <y>-1</y>
        <z>4</z>
      </Direction>
    </Light>
  </Scene>
</Tracer>
