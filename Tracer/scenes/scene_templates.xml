<Tracer>
  <Options>
    <Width>size</Width>
    <Height>size</Height>
    <FoV>angle</FoV>
    <WorldToScreen>real</WorldToScreen>
    <Aperture>real</Aperture> <!-- OPTIONAL -->
    <Focus>real</Focus> <!-- OPTIONAL -->
    <Eye>
      <x>real</x>
      <y>real</y>
      <z>real</z>
    </Eye>
    <LookAt>
      <x>real</x>
      <y>real</y>
      <z>real</z>
    </LookAt>
    <CameraUp>
      <x>real</x>
      <y>real</y>
      <z>real</z>
    </CameraUp>
  </Options>
  <Scene>
    <BackgroundColor>
      <r>real</r>
      <g>real</g>
      <b>real</b>
    </BackgroundColor>
    <!-- SPACE -->
    <Light type="DiffuseAreaLight">
      <Emittance>
        <r>real</r>
        <g>real</g>
        <b>real</b>
      </Emittance>
      <NumSamples>size</NumSamples>
      <Object>object</Object>
    </Light>
    <Light type="Directional">
      <Radiance>
        <r>real</r>
        <g>real</g>
        <b>real</b>
      </Radiance>
      <Direction>
        <x>real</x>
        <y>real</y>
        <z>real</z>
      </Direction>
    </Light>
    <Light type="Point">
      <Intensity>
        <r>real</r>
        <g>real</g>
        <b>real</b>
      </Intensity>
      <Position>
        <x>real</x>
        <y>real</y>
        <z>real</z>
      </Position>
    </Light>
    <!-- SPACE -->
    <Texture type="Checked">
      <ColorA>
        <r>real</r>
        <g>real</g>
        <b>real</b>
      </ColorA>
      <ColorB>
        <r>real</r>
        <g>real</g>
        <b>real</b>
      </ColorB>
      <ScaleS>real</ScaleS>
      <ScaleT>real</ScaleT>
    </Texture>
    <Texture type="Flat">
      <Color>
        <r>real</r>
        <g>real</g>
        <b>real</b>
      </Color>
    </Texture>
    <!-- SPACE -->
    <Material type="Matte">
      <Texture>texture</Texture>
    </Material>
    <Material type="Mirror">
      <Reflectance>real</Reflectance>
    </Material>
    <Material type="Opaque">
      <Diffuse>texture</Diffuse>
      <Shininess>real</Shininess>
      <Specular>texture</Specular>
    </Material>
    <Material type="Transparent">
      <Refraction>real</Refraction>
    </Material>
    <!-- SPACE -->
    <Transform>
      <Rotate>
        <rx>real</rx>
        <!-- OR -->
        <rxByPI2>signed int</rxByPI2>
        <ry>real</ry>
        <!-- OR -->
        <ryByPI2>signed int</ryByPI2>
        <rz>real</rz>
        <!-- OR -->
        <rzByPI2>signed int</rzByPI2>
      </Rotate>
      <Translate>
        <x>real</x>
        <y>real</y>
        <z>real</z>
      </Translate>
    </Transform>
    <!-- SPACE -->
    <Object type="Cylinder">
      <Height>real</Height>
      <Material>material</Material>
      <Radius>real</Radius>
      <Transform>transform</Transform>
    </Object>
    <Object type="Disk">
      <Material>material</Material>
      <Radius>real</Radius>
      <Transform>transform</Transform>
    </Object>
    <Object type="Pillar">
      <Height>real</Height>
      <Material>material</Material>
      <Radius>real</Radius>
      <Transform>transform</Transform>
    </Object>
    <Object type="Plane">
      <Height>real</Height>
      <Material>material</Material>
      <Transform>transform</Transform>
      <Width>real</Width>
    </Object>
    <Object type="Sphere">
      <Material>material</Material>
      <Radius>real</Radius>
      <Transform>transform</Transform>
    </Object>
    <!-- SPACE -->
    <Text>
      <dx>real</dx>
      <dz>real</dz>
      <Material>material</Material>
      <Radius>real</Radius>
      <String>string</String>
      <Transform>transform</Transform>
    </Text>
  </Scene>
</Tracer>
